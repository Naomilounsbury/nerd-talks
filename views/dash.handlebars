<div class="container">
  <div class="row">
    <div class="col s6">
      <section>
        <h2 class="center-align purple-text text-darken-4">Create New Post</h2>

        <form class="new-post-form">
          <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
          </div>
          <div>
            <label for="post-text">Text</label>
            <input id="post-text" name="post-text" />
          </div>
          <button type="submit" class="btn purple darken-4">Create</button>
        </form>
      </section>
    </div>
    <div class="col s6">
      <section>
        <h2 class="center-align purple-text text-darken-4">Your Posts</h2>
        <ol>

          {{!-- {{log posts}} --}}
          {{#each posts as |post|}}
            <div class="card-panel hoverable">
              <a href="/post/{{id}}"><h5
                  class="purple-text text-darken-4 center-align"
                >{{post_title}}</h5></a>
              <p class="purple-text text-darken-4">{{post_text}}</p>
              <p>{{formatDate created_at}}</p>
              <a href="dash/edit/{{id}}" class="edit-link">Edit post</a>
              <h6>Comments</h6>
              {{#each post.comments as |comment|}}
                <p class="purple-text text-darken-4">
                  {{comment.comment_text}}</p>
                <span class="purple-text text-darken-4">
                  --{{comment.user.username}}
                  {{formatDate comment.created_at}}</span>
              {{/each}}
            </div>
          {{/each}}

        </ol>

      </section>
    </div>
  </div>
</div>

<script src="/js/dashboard.js"></script>
<script src="/js/newpost.js"></script>